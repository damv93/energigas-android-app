<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="@dimen/marginMain"
    android:layout_marginStart="11dp"
    android:layout_marginEnd="11dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/img_expense_type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_toll_small"/>

        <TextView
            android:id="@+id/tv_expense_type_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginStart="16dp"
            android:textSize="@dimen/textSizeLarge2"
            android:textColor="#5a5a5a"
            tools:text="Peaje"/>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/heightSeparator"
        android:layout_marginTop="@dimen/marginMain"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:alpha="0.67"
        android:background="#dbdbdb" />

</LinearLayout>